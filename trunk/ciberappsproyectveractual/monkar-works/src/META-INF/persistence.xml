<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">


	<persistence-unit name="monkar">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<class>com.monkar.bean.Categoria</class>
		<class>com.monkar.bean.Sub_categoria</class>
		<class>com.monkar.bean.Usuario</class>
		<class>com.monkar.bean.Desarrollador</class>
		<class>com.monkar.bean.Aplicacion</class>
		
		<class>com.monkar.bean.Rol</class>
		<class>com.monkar.bean.Opcion</class>
		
		<class>com.monkar.bean.Compra</class>
		<class>com.monkar.bean.Imagen</class>
		
		<properties>
			<property name="eclipselink.jdbc.driver" value="com.mysql.jdbc.Driver"/>
			<property name="eclipselink.jdbc.url" value="jdbc:mysql://localhost:3306/monkarapps2"/>
			<property name="eclipselink.jdbc.user" value="root"/>
			<property name="eclipselink.jdbc.password" value="mysql"/>			
		</properties>
	</persistence-unit>
	
</persistence>
